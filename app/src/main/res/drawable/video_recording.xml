<!-- res/drawable/oval_with_square.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Oval shape -->
    <item android:gravity="center">
        <shape
            android:shape="oval">
            <solid android:color="@color/white" /> <!-- Change the color as needed -->
            <size android:height="60dp" android:width="60dp" />
        </shape>
    </item>

    <!-- Square shape inside the oval -->
    <item android:gravity="center">
        <shape
            android:shape="rectangle">
            <solid android:color="#4DC852" /> <!-- Change the color as needed -->
            <size android:width="20dp" android:height="20dp" /> <!-- Adjust the size of the square as needed -->
        </shape>
    </item>

</layer-list>
